	<Body>
		<Anchor
			ForceBodyParams="true"
			Mass="50"
			NoFoliageCollisions="true"
		>
			<Constraint
				AxisLocal="(0; -1; 0)"
				Name="Anchor"
				Type="Prismatic"
				MinLimit="0"
				MaxLimit="0.8"
			>
				<Motor Force="8000" Type="Position" />
			</Constraint>
		</Anchor>
	</Body>
</_templates>
<TruckAddon>
	<PhysicsModel Mesh="trucks/addons/frame_addon_tow">
		<NetSync Legacy="true" />
		<Body CenterOfMassOffset="(0; 0; 0)" Mass="800">
			<Constraint Type="Rigid" />			
			<Body
				Friction="2.0"
				Mass="500"
				ModelFrame="BoneRamp_cdt"
				NetSync="pv"
			>
				<Constraint
					AxisLocal="(0; 0; 1)"
					Name="ramp_lower"
					Type="Hinge"
					MinLimit="0"
					MaxLimit="25"
				>
					<Motor
						Damping="1.0"
						Force="500000"
						Tau="0.04"
						Type="Position"
					/>
				</Constraint>
				<Body
					ForceBodyParams="true"
					Mass="300"
					ModelFrame="BoneRampPrismatic_cdt"
					NoFoliageCollisions="true"
					CenterOfMassOffset="(-.3;0;0)"
				>
					<Constraint
						AxisLocal="(1; 0; 0)"
						Name="ramp_extend"
						Type="Prismatic"
						MinLimit="0"
						MaxLimit="4"
					>
						<Motor Force="300000" Type="Position" />
					</Constraint>
					<Body
						ForceBodyParams="true"
						Mass="30"
						ModelFrame="BoneWinch_cdt"
						NoFoliageCollisions="true"
						CenterOfMassOffset="(-0;0;0)"
					>
						<Constraint
							AxisLocal="(0; 0; 1)"
							Name="winch_move"
							Type="Prismatic"
							MinLimit="-0.9"
							MaxLimit="0.85"
						>
							<Motor Force="300000" Type="Position" />
						</Constraint>
						<Body
							CenterOfMassOffset="(0; 0; 0)"
							ImpactType="Truck"
							Mass="20"
							ModelFrame="BoneWinchHook1_cdt"
							NetSync="pv"
						>
							<Constraint
								AxisLocal="(0; 0; 1)"
								Type="Hinge"
								MinLimit="-15"
								MaxLimit="35"
							>
								<Motor Damping="4" Spring="10" Type="Spring" />
							</Constraint>
								<Body
									CenterOfMassOffset="(0; 0; 0)"
									ImpactType="Truck"
									Mass="20"
									ModelFrame="BoneWinchHook2_cdt"
									NetSync="pv"
								>
									<Constraint
										AxisLocal="(0; 1; 0)"
										Type="Hinge"
										MinLimit="0"
										MaxLimit="30"
									>
										<Motor Damping="2" Spring="10" Type="Spring" />
									</Constraint>
								</Body>							
						</Body>
					</Body>
				</Body>
			</Body>
		</Body>
	</PhysicsModel>
